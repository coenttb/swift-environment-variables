# Base environment configuration
# This file contains default settings for all environments

# Application info
APP_NAME=Swift Environment Variables
APP_VERSION=1.0.0
APP_ENV=base
DEBUG=false

# Server configuration
SERVER_HOST=localhost
SERVER_PORT=8080
BASE_URL=https://api.production.com

# Database configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=myapp
DATABASE_URL=postgresql://user:password@localhost:5432/myapp

# Cache and Redis
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Feature flags
FEATURE_FLAG_NEW_UI=false
FEATURE_FLAG_BETA_FEATURES=false
FEATURE_FLAG_ANALYTICS=true

# API and security
API_KEY=base-api-key
SECRET_KEY=base-secret-key
JWT_SECRET=base-jwt-secret

# External services
SMTP_HOST=smtp.production.com
SMTP_PORT=587
SMTP_FROM=noreply@production.com

# Performance and limits
CONNECTION_POOL_SIZE=10
RATE_LIMIT_MAX=1000
REQUEST_TIMEOUT=30

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=false